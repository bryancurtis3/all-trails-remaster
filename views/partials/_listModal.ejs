<div class="modal list-modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <form action="/lists" method="POST">
            <header class="modal-card-head">
                <p class="modal-card-title">Name Your List</p>
                <button type="button" class="delete close-list-modal" aria-label="close"></button>
            </header>

            <section class="modal-card-body">

                <div class="field">
                    <div class="control">
                        <textarea 
                        name="name"
                        class="input" 
                        placeholder='Ex. "Best Trails"'
                        maxlength="30"
                        ></textarea>
                    </div>
                </div>

                <input type="hidden" name="user_id" value="<%= user._id %>">

                <input type="hidden" name="username" value="<%= user.username %>">

                <input type="hidden" name="avatar" value="<%= user.avatar %>">

            </section>
            <footer class="modal-card-foot">
                <button class="button review-submit is-link">Submit</button>
                <button type="button" class="button close-list-modal">Cancel</button>
            </footer>
        </form>
    </div>
</div>