<div class="modal is-active">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Write a Review</p>
            <button class="delete" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            
            <h2 id="review-trail-name"><%= trail.name %></h2>

            <div class="field">
                <label class="label">Stars</label>
                <div class="control">
                <input class="input star-score" type="number" placeholder="1-5">
                </div>
            </div>

            <br>

            <div class="field">
                <!-- <label class="label">Message</label> -->
                <div class="control">
                <textarea class="textarea" placeholder="Write your review of <%= trail.name %> trail here"></textarea>
                </div>
            </div>
 


        </section>
        <footer class="modal-card-foot">
            <button class="button is-link">Submit</button>
            <button class="button">Cancel</button>
        </footer>
    </div>
  </div>