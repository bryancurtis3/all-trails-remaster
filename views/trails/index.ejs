<!DOCTYPE html>
<html lang="en">

<!-- Head tag content -->
<%- include('../partials/_head.ejs') %>

<body>
    <!-- Navbar -->
    <%- include('../partials/_nav.ejs') %>

    <!-- Hero Banner -->
    <%- include('../partials/_hero.ejs') %>

    <!-- Obviously temporary -->
    <h1 style="font-size: 30px; color: white">You Have Reached The Trails Page</h1>

    <!-- Container of trail boxes -->
    <div class="trail-boxes">
        <!-- Dynamically displays available trails -->
        <% for (let i = 0; i < trails.length; i++) { %> 
            <% const trail = trails[i] %> 

            <div class="box trail-box">
                <a href="/trails/<%= trail.id %>">
                    
                    <!-- Trail Box Image -->
                    <div class="box-img-cont">
                        <img class="box-img" src="<%= trail.image %>" alt="Trail Image">
                    </div>

                    <!-- Trail Box Text -->
                    <div class="box-text-cont">
                        <h3><%= trail.name %></h3>
                        <p class="trail-location"><%= trail.location %></p>
                        <p class="diff-rating">Diff: <%= trail.difficulty %></p>
                        <p class="trail-length">Length: <%= trail.length %> miles</p>
                    </div>
                </a>
            </div>

        <% } %> 
    </div>

    <footer class="footer">
        <div class="content">
            <img id="footer-logo" src="https://i.imgur.com/inBZZRA.png" width="140" height="60">
        </div>
    </footer>
    
</body>
</html>