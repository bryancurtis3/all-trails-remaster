<!DOCTYPE html>
<html lang="en">
<head>

<!-- Header tag content -->
<%- include('../partials/_head.ejs') %>

<!-- Navbar -->
<%- include('../partials/_nav.ejs') %>

<body>
   

    <section class="reg-container">

        <form action="/profile?_method=PUT " method="POST" class="box">
        <div class="avatar"> 
                <img class="avatar" src="<%= user.avatar %>" alt="Profile"> 
        </div>
          <h3 class="form-title">Update <%= user.username %> </h3>
    
            <div class="field">
                <label class="label">Username</label>
                <div class="control">
                <input
                    name="username"
                    class="input"
                    type="text"
                    placeholder="<%= user.username %>"
                    value="<%= user.username %>"
                />
                </div>
            </div>
            <div class="field">
              <label class="label">Email</label>
              <div class="control">
                <input
                  name="email"
                  class="input"
                  type="email"
                  placeholder="<%= user.email %>"
                  value="<%= user.email %>"
                />
              </div>
            </div>
            <div class="field">
              <label class="label">Location</label>
              <div class="control">
                <input
                  name="location"
                  class="input"
                  type="text"
                  placeholder="<%= user.location %>"
                  value="<%= user.location %>"
                />
              </div>
            </div>
            <div class="field">
              <label class="label">Profile Picture</label>
              <div class="control">
                <input
                  name="avatar"
                  class="input"
                  type="text"
                  placeholder= <%= user.avatar %>
                  value= <%= user.avatar %>
                  
                />
              </div>
            </div>
            <div class="field">
              <div class="control">
                <button id="submission" class="button is-link is-fullwidth">Submit</button>
              </div>
            </div>
        </form>
      </section>
    
    
</body>
</html>