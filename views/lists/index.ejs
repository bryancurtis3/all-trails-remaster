
<!-- Head tag content -->
<%- include('../partials/_head.ejs') %>

<body>
    <!-- Navbar -->
    <%- include('../partials/_nav.ejs') %>

   
    <h1>list view Ahoy!</h1>

    <div class="lists-container">

        <% for (let i = 0; i < lists.length; i++) { %>
            <% const list = lists[i] %> 
            <div class="list-spot">
                <% if (list.trail_id.length < 4) { %>
                    
                    <figure class="image is-128x128">
                        <img class="profile-pic" src="<%= list.trail_id[0].image %>">
                    </figure>
                    
                <% } else { %>
                    <% for( let i = 0; i < 4; i++ ) { %>
                        
                        <figure class="image is-64x64">
                            <img class="profile-pic" src="<%= list.trail_id[i].image %>">
                        </figure>
                        
                    <% } %>
                <% } %> 
            </div>


            <div class="name-rating">
                <h3><%= list.username %></h3>
            </div>
            

            <hr>
        <% } %> 
        
    </div>



   
    <!-- Container of list boxes -->
    <div class="trail-boxes">
        <!-- Dynamically displays available list -->
       

       <% for (let i = 0; i < lists.length; i++) { %> 
            <% const list = lists[i]; %> 
            
            <!-- here we have access to the list object 
            what we need to do is access the trail_id[0] within the list and pull back the the trail object.image -->
            <div class="box trail-box">
                <a href="<%= list.name %>">
                    
                    <!-- list Box Image -->
                    <div class="box-img-cont">
                        <a href="lists/<%= list.id%>"><img class="box-img" src="<%= list.image %>" alt="Trail Image"></a>
                    </div>

        <!-- list Box Text -->
                <div class="box-text-cont">
                    <div class="box-text-cont">
                        <h3><%= list.name %></h3>
                        <p> Trails: <%= list.trail_id.length%></p>
 
                    </div>
                </div>
                </a>
            </div>
                    

          
        <% } %>


    </div>

    <!-- <footer class="footer">
        <div class="content">
            <img id="footer-logo" src="https://i.imgur.com/inBZZRA.png" width="140" height="60">
        </div>
    </footer> -->




    





</body>
</html>


